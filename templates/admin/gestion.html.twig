{% extends 'base.html.twig' %}

{% block title %}Troc'Eco | J'ajoute une catégorie{% endblock %}



{% block contenuPrincipal %}
<section>
    <div class="shadow-lg">
        <h1 class="text-center py-3 my-5">J'ajoute une catégorie</h1>
    </div>

    {# Affichage du message de succes #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


    <div class="container shadow bg-vert rounded">
        {{ form_start(Formulaire) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(Formulaire) }}
            </div>
            <div class="col" id="some-custom-id">
                {{ form_row(Formulaire.nom) }}
                {{ form_row(Formulaire.photo) }}
                <div style="background-color:#FFDAC3" class="m-2 px-5 btn rounded">{{ form_row(Formulaire.enregistrer) }}</div>
            </div>
            
        {{ form_end(Formulaire) }}
    </div>
</section>
    
   
{# rappel du bouton scroll #}
{{ parent() }}
{% endblock %}
